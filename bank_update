#include<stdio.h>

int menu();
void new_cust();
void reg_cust();
int search(int ac);
int auth();
int pin_change(char cpin);
void push(float deposite);
void pop(float withdraw);
void peek(int a);
int var_menu();

typedef struct cust
{
  char name[20];
  int ac;
  char pin[10];
}customer;

customer c1[1000];
int i=0,pos,flag=-1,m,ac,top=-1;
float deposite,withdraw,acc[1000];
char pin[100];


int menu()
{
  int ch1;
  printf("\nPress '1' if you are a new customer \nPress '2' if you're a registered customer\n");
  scanf("%d",&ch1);
  switch(ch1)
  {
    case 1:
    new_cust();
    reg_cust();
    return 1;
    break;

    case 2:
    reg_cust();
    return 1;
    break;

    default:
    pritnf("\nenter the right choice\n");
  }

void new_cust()
{
 
  printf("\nEnter your name:\n");
  scanf("%s",c1[i].name);
  printf("Enter your 4-digit A/C number:\n");
  scanf("%d",c1[i].ac);
  printf("\nSet your PIN:\n");
  sacnf("%s",c1[i].pin);
  i++;
}

void reg_cust()
{
  printf("\nenter the 4-digit account number\n");
  scanf("%d",&ac);
  search(ac);
  if (search()==1)
  {
    auth();
  }
}
int search(int ac)
{

  int up=i-1; //upperbound
  int lb=0; //lowerbound
  while(lb<=up)
  {
    int m=(lb+up)/2;
    if(c1[m].ac==ac)//account number
    {
      pos=m;
      flag++;
    }
    if (arr[m] < ac)
    {
      lb = m + 1;
    }


    else
    {
      up = m - 1;
    }
  }
  if(flag>=0)
  {
    printf("\nAccess granted!\n");
    return 1;
    return pos;
  }
  else
  {
    printf("\nPlease enter valid credentials\n");
    scanf("%d",&ac);
    search(ac);

  }
}




  int auth()
  {
    int f=0;
    while(f<3)
    {
      printf("\nEnter the PIN\n");
      scanf("%s",pin);
      if(c1[m].pin==pin)
      {
        return 1;
        break;
      }
      else
      {
        printf("\nwrong pin\n");
      }
      f++;
    }
    if(f==3)
    {
      printf("\nThe PIN was entered wrong several times\n");
      menu();
    }
    if(auth()==1)
    {
      var_menu();
    }
  }
  int var_menu()
{
    if(menu()==1)
  {
    int ch2;
    printf("\nEnter '1' to withdrae money\nEnter '2' to deposit money\nEnter '3' to check the balnce of your account\nEnter '4' to change PIN\n Enter '5' to check the last 3 transactions\nEnter '6' to go to the previous menu\n");
    scanf("%d",ch2);
    switch(ch2)
    {
      case 1:
      printf("\nEnter the amount to be withdrawn:");
      scanf("\n%f",&withdraw);
      pop(withdraw);
      break;

      case 2:
      printf("\nenter the amount to be deposited:");
      scanf("%f",&deposite);
      push(deposite);
      break;

      case 3:
      peek(1);
      break;

      case 4:
      printf("\nEnter the old PIN:");
      scanf("\n%c",opin);
      pin_change(opin);
      if(pin_change==1)
      {
        printf("\nThe PIN was successfully cahnged");
      }
      break;

      case 5:
      peek(3);
      break;

      case 6:
      menu();
      break;

      case 7:
      printf("\nEXIT\n");
      break;
    }
  }
}
  int pin_change(char cpin)
  {
    char cdpin[100];
    printf("\nEnter the 4-digit account number")
    scanf("%d",ac);
    search(ac);
    if(c1[pos].pin==cpin)
    {
      printf("\nEnter the NEW PIN ");
      scanf("%c",npin);
      c1[pos].pin=npin;
      return 1;
    }
    else
    {
      printf(\n"Entered PIN is INCORRECT");
      printf("\nEnter the PIN");
      scanf("%c",cdpin);
      pin_change(cdpin);
    }
  }

  void push(float deposite)
  {
    top++;
    if(top=0)
    {
      acc[top]=deposite;
    }
    else
    {
      sum=acc[top];
      deposite=deposite+sum;
      acc[top]=deposite;
    }
    printf("\nThe balnce after the trancation is %f",acc[top]);
  }

  void pop(float withdraw)
  {
    sub=acc[top];
    if(top=-1 || withdraw>sub)
    {
      printf("\nThere isn't enough balance in your account");
    }

    else
    {
        withdraw=sub-withdraw;
        push(withdraw);
    }
    top--;
  }

  void peek(int a)
  {
    if(a==1)
    {
      printf("\nThe Account Balance is %f",acc[top]);
    }
    else if(a==3)
    {
      printf("\nthe last 3 transactions are:\n")
      while(a=top;a>top-3;a--)
      {
        printf("%f\n",acc[a])
      }

    }
  }


  void main()
  {
    menu();
  }
